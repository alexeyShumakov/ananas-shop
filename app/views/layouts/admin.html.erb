<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".left-menu">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <ul class="nav navbar-nav navbar-right hidden-xs">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-user"></span>
                <span class="caret"></span>
              </a>
          <ul class="dropdown-menu">
            <li class="dropdown-header"><%= current_user.email %></li>
            <li><%= link_to 'Выход', destroy_user_session_path, method: :delete %></li>
          </ul>
        </ul>


        <div class="navbar-header hidden-xs">
          <%= link_to root_path, class: 'navbar-brand' do %>
            <%= image_tag image_path('logo-ananas.png') %>
          <% end %>
        </div>

        <%= link_to root_path, class: 'text-center visible-xs navbar__xs-brand' do %>
          <%= image_tag image_path('logo-ananas.png') %>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= redux_store 'adminStore' %>
      <%= render 'layouts/messages' %>
      <div>
        <%= yield %>
      </div>
     </div>
  </body>
</html>
