<h2 class='text-center'>Измените ваш пароль</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("#{@minimum_password_length} символов минимум" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Повторите новый пароль", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Изменить пароль", {class: 'btn btn-primary btn-block'} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
