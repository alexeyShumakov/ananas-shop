<div class="row">
  <div class="col-sm-3">
    <%= render partial: '/admin/admin_nav' %>
  </div>
  <div class="col-sm-9">
    <h3>
      category
      <%= link_to edit_admin_category_path(@category.id) do %>
        <span class="glyphicon glyphicon-pencil text-warning control-icon"/>
      <% end %>
      <%= link_to admin_category_path(@category.id), {method: :delete} do %>
        <span class="glyphicon glyphicon-remove text-danger control-icon"/>
      <% end %>
    </h3>
    <dl class='dl-horizontal'>
        <dt>Название</dt>
        <dd><%= @category.title %></dd>

        <dt>Родительская кат.</dt>
        <dd><%= @category.parent.title if @category.parent %></dd>
    </dl>
  </div>
</div>
